{
  "name": "ebus-notebook",
  "displayName": "ebus-notebook",
  "description": "eBUS Notebook",
  "version": "0.1.0",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "type": "module",
  "main": "./dist/src/extension.cjs",
  "engines": {
    "vscode": "^1.90.0"
  },
  "contributes": {
    "notebooks": [
      {
        "type": "ebus-notebook",
        "displayName": "eBUS Notebook",
        "selector": [
          {
            "filenamePattern": "*.ebnb"
          }
        ]
      }
    ],
    "configuration": {
			"type": "object",
			"title": "eBUS Notebook Configuration",
			"properties": {
				"ebus-notebook.conversion.show": {
					"scope": "window",
					"type": "string",
					"default": "no",
          "enum": [
            "no",
            "yes",
            "task"
          ],
					"description": "Whether to show the conversion process terminal or use a task instead of a terminal."
				},
        "ebus-notebook.conversion.cmd": {
          "scope": "window",
          "type": "string",
          "default": "npm exec --package=@ebusd/ebus-typespec tsp2ebusd -- -o ${outFile} ${inFile}",
          "description": "The command to use for converting TypeSpec to ebusd CSV."
        },
				"ebus-notebook.ebusd.host": {
					"scope": "window",
					"type": "string",
					"description": "The host name or IP address of ebusd REPL to connect to."
				},
				"ebus-notebook.ebusd.port": {
					"scope": "window",
					"type": "number",
					"default": 8888,
					"description": "The port number of ebusd REPL to connecto to."
				}
			}
		}

  },
  "scripts": {
    "clean": "rimraf ./dist ./temp",
    "build": "npm run compile && npm run package-vsix",
    "compile": "rollup --config rollup.config.ts --configPlugin typescript --failAfterWarnings 2>&1",
    "watch": "rollup --config rollup.config.ts --configPlugin typescript --watch",
    "package-vsix": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "~25.0.7",
    "@rollup/plugin-json": "~6.1.0",
    "@rollup/plugin-node-resolve": "~15.2.3",
    "@rollup/plugin-typescript": "~11.1.6",
    "@types/node": "~18.11.19",
    "@types/tmp": "^0.2.6",
    "@types/vscode": "~1.90.0",
    "rimraf": "~5.0.7",
    "rollup": "~4.17.2",
    "tslib": "^2.6.3",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "@ebusd/ebus-typespec": "^0.1.0",
    "@typespec/compiler": "^0.56.0",
    "tmp": "^0.2.3",
    "tmp-promise": "^3.0.3"
  }
}
